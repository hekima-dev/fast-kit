{
  "compilerOptions": {
    "target": "ES6",
    "rootDir": "./src",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./dist",
    "removeComments": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "allowUnreachableCode": false,
    "skipLibCheck": true,
    "module": "commonjs",
    "lib": [
      "ESNext",
      "dom"
    ],
    "jsx": "react",
    "sourceMap": true
  },
  "include": [
    "src",
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "target": "esnext",
  "module": "commonjs",
  "lib": [
    "esnext",
    "dom"
  ],
  "allowSyntheticDefaultImports": true,
  "resolveJsonModule": true
}